{
  "name": "cloudflare-astro-apps",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "deploy:web:local": "turbo deploy:web:local",
    "deploy:web:production": "turbo deploy:web:production",
    "migrate:d1:local": "echo 'Y' | wrangler d1 migrations apply $(node scripts/parse-d1.js) --local",
    "migrate:d1:production": "echo 'Y' | wrangler d1 migrations apply $(node scripts/parse-d1.js) --remote",
    "test": "vitest",
    "test:ci": "CI=true vitest --run",
    "test:coverage": "vitest --run --coverage",
    "prepare": "npm exec husky || echo 'Husky not found, skipping...'"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "^2.1.8",
    "husky": "^9.1.7",
    "tsc-alias": "^1.8.10",
    "turbo": "^2.3.3",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8",
    "wrangler": "^3.99.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
