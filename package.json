{
  "name": "cloudflare-astro-apps",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:production": "turbo build:production",
    "dev": "turbo dev",
    "migration:generate": "turbo migration:generate",
    "migrate:local": "turbo migrate:local",
    "migrate:production": "turbo migrate:production",
    "test": "vitest",
    "test:ci": "CI=true vitest --run",
    "test:coverage": "vitest --run --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "^2.1.8",
    "turbo": "^2.3.3",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "husky": "^9.1.7",
    "wrangler": "^3.99.0"
  }
}
