{
  "name": "flarekit",
  "private": true,
  "type": "module",
  "bin": {
    "flarekit": "./scripts/flarekit.js",
    "e2e": "./scripts/e2e-workflow.js"
  },
  "scripts": {
    "setup": "node ./scripts/setup-wrangler.js",
    "dev": "npx flarekit dev",
    "deploy": "npx flarekit deploy",
    "build": "npx flarekit build",
    "preview": "npx flarekit --ui=stream preview",
    "test": "npx flarekit test",
    "test:watch": "npx flarekit test:watch",
    "test:e2e": "npx e2e --wait-for=http://localhost:7000 --wait-for=http://localhost:7001 --timeout=120",
    "test:e2e:watch": "npx e2e --wait-for=http://localhost:7000 --wait-for=http://localhost:7001 --timeout=120 --watch",
    "prepare": "npm exec husky || echo 'Husky not found, skipping...'",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/eslint-config-prettier": "^6.11.3",
    "@vitest/coverage-istanbul": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "glob": "^11.0.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "tsc-alias": "^1.8.10",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8",
    "wrangler": "^3.100.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,json,md}": "prettier --write"
  },
  "dependencies": {
    "@types/node": "^22.10.4"
  }
}
