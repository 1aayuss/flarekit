{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "@services/database#build": {
      "cache": false,
      "outputs": ["dist/**"]
    },
    "@services/database#dev": {
      "dependsOn": ["@services/database#build"],
      "cache": false,
      "persistent": true,
      "outputs": []
    },
    "@apps/web#dev": {
      "dependsOn": ["@services/database#build"],
      "cache": false,
      "persistent": true,
      "outputs": []
    },
    "dev": {
      "dependsOn": [],
      "cache": false,
      "outputs": []
    },
    "dev:web": {
      "dependsOn": [
        "@services/database#dev",
        "@apps/web#dev",
        "@apps/worker#dev"
      ],
      "persistent": true,
      "cache": false,
      "inputs": [],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    },
    "deploy:web": {
      "dependsOn": ["@services/database#build", "@apps/web#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    }
  }
}
