{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "migrate": {
      "dependsOn": [],
      "inputs": [],
      "outputs": []
    },
    "migrate:local": {
      "dependsOn": [
        "@services/database#migrate"
      ],
      "inputs": [],
      "outputs": []
    },
    "migrate:production": {
      "dependsOn": [
        "@services/database#migrate"
      ],
      "inputs": [],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": []
    },
    "build:production": {
      "dependsOn": [
        "@services/db#build"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": []
    }
  }
}
