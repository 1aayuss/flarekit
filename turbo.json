{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    },
    "deploy:web:local": {
      "dependsOn": [
        "@services/database#build",
        "@apps/web#build",
        "migrate:d1:local"
      ],
      "inputs": [],
      "outputs": []
    },
    "deploy:web:production": {
      "dependsOn": [
        "@services/database#build",
        "@apps/web#build",
        "migrate:d1:production"
      ],
      "inputs": [],
      "outputs": []
    }
  }
}
