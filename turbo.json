{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "@flarekit/database#build": {
      "cache": false,
      "outputs": ["dist/**"]
    },
    "@flarekit/database#dev": {
      "dependsOn": ["@flarekit/database#build"],
      "cache": false,
      "persistent": true,
      "outputs": []
    },
    "@flarekit/web#dev": {
      "dependsOn": ["@flarekit/database#build"],
      "cache": false,
      "persistent": true,
      "outputs": []
    },
    "dev": {
      "dependsOn": ["@flarekit/database#build"],
      "cache": false,
      "outputs": []
    },
    "dev:web": {
      "dependsOn": [
        "@flarekit/database#dev",
        "@flarekit/web#dev",
        "@flarekit/worker#dev"
      ],
      "persistent": true,
      "cache": false,
      "inputs": [],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    },
    "deploy:web": {
      "dependsOn": ["@flarekit/database#build", "@flarekit/web#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "setup": {
      "dependsOn": ["^setup"],
      "cache": false,
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": false,
      "outputs": []
    }
  }
}
